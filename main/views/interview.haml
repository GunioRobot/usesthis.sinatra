%section
  %article.interview{:id => @interview.slug}
    %img{:src => "/images/portraits/#{@interview.slug}.jpg", :width => 500, :height => 335, :alt => @interview.person, :class => 'portrait'}
    - if @interview.credits
      :markdown
        #{@interview.credits}

    %h2= @interview.person
    %p.summary= @interview.summary
    %time{:datetime => @interview.published_at.strftime("%Y-%m-%d")}= @interview.published_at.strftime("%b %d, %Y") unless @interview.published_at.nil?
    :markdown
      #{@interview.contents_with_wares}